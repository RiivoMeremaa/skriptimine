#! /bin/bash
# Riivo Meremaa, Skript kujund
# Ülesanne: küsib kasutajalt ridade arvu ja joonistab vastava kujundi

read -p "Sisesta ridade arv (1–50): " readarv

if ! [[ "$readarv" =~ ^[0-9]+$ ]]; then
  echo "Viga: palun sisesta täisarv!"
  exit 1
fi

if (( readarv < 1 || readarv > 50 )); then
  echo "Viga: ridade arv peab olema 1 kuni 50!"
  exit 1
fi

for ((i=readarv; i>=1; i--))
do
  for ((j=1; j<=i; j++))
  do
    echo -n "* "
  done
  echo
done
