#!/bin/bash

echo -n "Sisesta (oma) vanus: "
read vanus

# Kontroll, kas sisestus on t채isarv
if ! [[ "$vanus" =~ ^[0-9]+$ ]]; then
    echo "Vigane sisend: palun sisesta positiivne t채isarv"
    exit 1
fi

# Kui vanus on suurem kui 110
if [ "$vanus" -gt 110 ]; then
    echo "Oled surnud"
    exit 0
fi

# Vanusekategooriad
if [ "$vanus" -lt 11 ]; then
    echo "Oled laps"
elif [ "$vanus" -lt 18 ]; then
    echo "Oled nooruk"
elif [ "$vanus" -le 25 ]; then
    echo "Oled noor t채iskasvanu"
elif [ "$vanus" -lt 63 ]; then
    echo "Oled t채iskasvanu"
else
    echo "Oled senjoor"
fi
